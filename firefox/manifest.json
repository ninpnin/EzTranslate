{

  "manifest_version": 2,
  "name": "EzTranslate",
  "version": "1.0",
  "description": "Offers words translations on PDF files. Powered by Yandex.Translate",

  "icons": {
    "48": "icons/EzTranslate.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*.pdf"],
      "js": ["thirdParty/jquery.js",
            "translate.js",
            "jsonGetter.js"          
      ],
      "css": ["boxstyle.css"],
      "run_at": "document_end"
    }
    
  ],

  "options_ui": {
    "page": "options.html"
  },

  "permissions": [
      "https://translate.yandex.net/*",
      "storage"
  ]

}