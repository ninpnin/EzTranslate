{

  "manifest_version": 2,
  "name": "EasyTranslate",
  "version": "1.0",
  "permissions": ["https://translate.yandex.net"],
  "description": "Offers words translations on pdf files",

  "icons": {
    "48": "icons/hideIMG.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*.pdf"],
      "js": ["thirdParty/jquery.js",
            "translate.js",
            "yaTranslate.js"          
      ],
      "run_at": "document_end"
    }
    
  ],

  "permissions": [
      "https://translate.yandex.net/*"
  ],

  "background":
  {
      "scripts": ["thirdParty/jquery.js"]
  }

}